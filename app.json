{
  "expo": {
    "name": "KParkIT Attendance",
    "slug": "kparkit-attendance",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kparkit.attendance"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.kparkit.attendance",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow KParkIT Attendance to access your camera for QR code scanning."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow KParkIT Attendance to use your location for attendance tracking.",
          "locationWhenInUsePermission": "Allow KParkIT Attendance to use your location for attendance tracking."
        }
      ],
      "expo-font",
      "expo-barcode-scanner"
    ],
    "extra": {
      "eas": {
        "projectId": "037d9e5d-316a-4aef-a343-ea259ac88d3c"
      }
    },
    "owner": "krushnapalsinh"
  }
}
